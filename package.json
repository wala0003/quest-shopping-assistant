{
  "name": "quest-ai-shopping-assistant",
  "displayName": "Quest - AI Shopping Assistant & Automatic Coupons",
  "version": "0.0.1",
  "description": "AI-powered shopping assistant that helps find the best deals and automatically applies coupons",
  "author": "JRW Publishing",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.7.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.5",
    "@supabase/supabase-js": "^2.48.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.474.0",
    "plasmo": "0.89.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "0.0.241",
    "@types/jest": "^29.5.8",
    "@types/node": "22.10.9",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "^10.4.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.27",
    "prettier": "3.0.0",
    "svgo": "^3.3.2",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "5.7.3"
  },
  "manifest": {
    "name": "Quest - AI Shopping Assistant & Automatic Coupons",
    "description": "AI-powered shopping assistant that helps find the best deals and automatically applies coupons",
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "clipboardWrite",
      "scripting",
      "webNavigation"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "options.html"
        ],
        "matches": [
          "<all_urls>"
        ],
        "extension_ids": [
          "$CRX_ID"
        ]
      }
    ]
  }
}
